<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>ch.qligier.jetbrains.plugin.fss</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>FHIRÂ® and SUSHI Support</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/qligier/jetbrains-plugin-fss">Quentin Ligier</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    A plugin that adds support for the FSH language, the IG Publisher and SUSHI tools, and the <em>ig.ini</em> file.

    <a href="https://github.com/qligier/jetbrains-plugin-fss">Source code</a> |
    <a href="https://github.com/qligier/jetbrains-plugin-fss/issues">Issues</a> |
    <a href="https://www.linkedin.com/in/qligier/">LinkedIn</a>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <actions>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <fileIconProvider implementation="ch.qligier.jetbrains.plugin.fss.common.IconProvider"/>

        <!-- The FSH language -->
        <fileType
                name="FSH"
                implementationClass="ch.qligier.jetbrains.plugin.fss.fsh.FshFileType"
                language="FSH"
                extensions="fsh"/>
        <lang.parserDefinition
                language="FSH"
                implementationClass="ch.qligier.jetbrains.plugin.fss.fsh.antlr.FshParserDefinition"/>
        <lang.ast.factory
                language="FSH"
                implementationClass="ch.qligier.jetbrains.plugin.fss.fsh.antlr.FshAstFactory"/>
        <lang.syntaxHighlighterFactory
                language="FSH"
                implementationClass="ch.qligier.jetbrains.plugin.fss.fsh.color.FshSyntaxHighlighterFactory"/>
        <lang.commenter
                language="FSH"
                implementationClass="ch.qligier.jetbrains.plugin.fss.fsh.features.FshCommenter"/>
        <lang.braceMatcher
                language="FSH"
                implementationClass="ch.qligier.jetbrains.plugin.fss.fsh.features.FshPairedBraceMatcher"/>

        <defaultLiveTemplates
                file="/fsh/liveTemplates.xml"/>
        <liveTemplateContext
                contextId="FSH"
                implementation="ch.qligier.jetbrains.plugin.fss.fsh.FshTemplateContextType"/>
        <colorSettingsPage
                implementation="ch.qligier.jetbrains.plugin.fss.fsh.color.FshColorSettingsPage"/>

        <!-- The ig.ini file -->
        <fileType
                name="ig.ini"
                implementationClass="ch.qligier.jetbrains.plugin.fss.ig_ini.IgIniFileType"
                language="IG_INI"
                fileNames="ig.ini"/>
        <annotator
                language="IG_INI"
                implementationClass="ch.qligier.jetbrains.plugin.fss.ig_ini.IgIniAnnotator"/>
        <lang.parserDefinition
                language="IG_INI"
                implementationClass="ch.qligier.jetbrains.plugin.fss.ig_ini.language.parser.IniParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="IG_INI"
                implementationClass="ch.qligier.jetbrains.plugin.fss.ig_ini.language.highlighter.IniSyntaxHighlighterFactory"/>
        <lang.commenter
                language="IG_INI"
                implementationClass="ch.qligier.jetbrains.plugin.fss.ig_ini.language.IniCommenter"/>
        <completion.contributor
                language="IG_INI"
                implementationClass="ch.qligier.jetbrains.plugin.fss.ig_ini.IgIniCompletionContributor"/>
    </extensions>

    <applicationListeners>
        <listener class="ch.qligier.jetbrains.plugin.fss.FssPluginActivationListener"
                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
</idea-plugin>
